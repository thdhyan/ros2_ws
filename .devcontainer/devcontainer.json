{
    "name": "ROS2 Workspace",
    "dockerComposeFile": ["docker-compose.yml"],
    "service": "dev",
    "runServices": ["dev"],
    "workspaceFolder": "/ros2_ws",
    "remoteUser": "ros",
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "ms-vscode.cpptools",
        "ms-python.python",
        "twxs.cmake",
        "ms-azuretools.vscode-docker"
    ],
    "postCreateCommand": "echo 'source /opt/ros/humble/setup.bash' >> ~/.bashrc"
}
